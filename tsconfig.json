{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
//    "typings",
    "**/*.spec.ts"
  ],
  "filesGlob": [
//    "./src/**/*.ts",
//    "./test/**/*.ts",
    "!./node_modules/**/*.ts",
//    "src/custom_typings.d.ts",
    "typings/index.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "include": [
    "src/**/*.ts"
  ]
}
